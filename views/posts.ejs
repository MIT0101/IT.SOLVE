<% if(postsArray.length>0){ %> 
  <link rel="stylesheet" href="/css/postStyle.css">

    <% for(let j=0;j<postsArray.length;j++) {%> 
<% if(postsArray[j].isPostFound){ %> 
 
    
    <div class="container bootstrap snippets bootdey">
        <di class="col-md-12">
            <!-- was col-sm-12 -->
            <div class="col-md-10 col-lg-8 p-0 mx-auto ">
                <div class="panel panel-white post panel-shadow mx-auto">
                    <div class="post-heading">
                        <div  class="pull-left image ">
                            <!-- src="https://bootdey.com/img/Content/user_1.jpg" -->
                            <img src="/profilesImages/<%= postsArray[j].postAutherImageUrl  %> " class="img-circle avatar" alt="user profile image">
                        </div>
                        <div class="pull-left meta">
                            <div class="title h5">
                                <!-- <a href="#"><b>Mohammed Al Mustafa</b></a>
                                uploaded a photo. -->
    
                                <a style="line-height: 1.5;font-weight: 400;font-size: 1.2rem;" data-toggle="modal" class="abtn " href="/profile/<%= postsArray[j].postAutherUsername %>" data-target="#myModal"><b class="postProperB"><%=postsArray[j].postAutherName%></b></a>
    
    
                                <div class="modal " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                  <div style="min-height: 50px;">
                                    <!-- <button id="mybtn1" type="button" class="close m-4 p-2 postProperBtn" data-dismiss="modal" aria-hidden="true" >X</button> -->
                                    <button id="mybtn1" type="button" class="getData closepropur m-4 p-2 " data-dismiss="modal" aria-hidden="true" ><img src="/images/close_window_48.png" ></button>

                                    <!-- <h3  id="myModalLabel">Modal header</h3> -->
                                  </div>
                                  <div style="height:90%; width: 80%;border: 0;" class="modal-body mx-auto">
                                  </div>
                                </div>
    
    
                            </div>
                            <input class="postCurrentTime" type="hidden" name="" value="<%=postsArray[j].postCreatedTime%>">
                            <h6 class="text-muted time postCurrentTimeh"></h6>
    
                        </div>
                            
                        <div class="pull-right post_more_info">
                            <!--must has an post href to passed-->
                            <% if(showMoreInfo){ %> 

                        
                                    <!-- must have a  href  to a tag -->
                                    <a data-toggle="modal" class="abtn postProperA" href="/post/<%=postsArray[j].postId%> " data-target="#myModal">More Info<img src="/images/info_icon_32.png" alt="info icone"></a>
                                    
                                    
                                    <div class="modal " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                      <div style="min-height: 50px;">
                                        <!-- <button id="mybtn1" type="button" class="close m-4 p-2 " data-dismiss="modal" aria-hidden="true" >X</button> -->
                                        <button id="mybtn1" type="button" class="getData closepropur m-4 p-2 " data-dismiss="modal" aria-hidden="true" ><img src="/images/close_window_48.png" ></button>

                                        <!-- <h3  id="myModalLabel">Modal header</h3> -->
                                      </div>
                                      <div style="height:90%; width: 80%;border: 0;" class="modal-body mx-auto">
                                      </div>
                                    </div>
                                 
                            <% } %> 
    
                            <h6 class="postDepaoretment"><%=postsArray[j].postDepartment  %></h6>
    
    
                        </div>
                    </div>
                    <% if(postsArray[j].postImageUrl.length>0){ %> 
                    <div class="post-image">
                        <!-- https://via.placeholder.com/400x200/FFB6C1/000000 -->
                        <img src="/postImages/<%=postsArray[j].postImageUrl  %> " class="image" alt="image post">
                    </div>
                    <% } %> 

                    <div class="post-description">
                        <h4><%=postsArray[j].postTitle  %> </h4>
                        <p class="postMessage"><%= postsArray[j].postMessage %> </p>
                        <!-- for like and share icons -->
                        <!-- <div class="stats">
                            <a href="#" class="btn btn-default stat-item">
                                <i class="fa fa-thumbs-up icon"></i>228
                            </a>
                            <a href="#" class="btn btn-default stat-item">
                                <i class="fa fa-share icon"></i>128

                                
                            </a>
                        </div> -->

                    </div>
                       <div class="post-footer">
                        <form action="/post/<%=postsArray[j].postId%> " method="post" >
                        <!-- here may be a form to submit comments -->
                        <div class="input-group"> 
                           
                            <input required name="comentMessage" class="form-control commentTextInput" placeholder="Add a comment" type="text">
                    
                            <button class="commentSubmit" type="submit"> <img src="/images/paper_plane_32.png" alt="">  </button>

                        </form>

                    </div>
                        
                        <ul class="comments-list">
                            <% for(let i=0;i<postsArray[j].postComments.length;i++){ %> 
                            <li  class="comment"> 
                    
                
                                    <img  class="pull-left avatar" src="/profilesImages/<%= postsArray[j].postComments[i].commentAutherImageUrl  %>" alt="avatar">
                                
    
                                <div  class="comment-body">
                                    <div class="comment-heading">
                                        <!--Mohammed Al Mustafa-->
                                        <a  data-toggle="modal" class="abtn meta" href="/profile/<%= postsArray[j].postComments[i].autherUsername %>" data-target="#myModal"><b><%=postsArray[j].postComments[i].autherFullName %></b></a>
    
    
                                        <div class="modal " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                          <div style="min-height: 50px;">
                                            <!-- <button id="mybtn1" type="button" class="close m-4 p-2 " data-dismiss="modal" aria-hidden="true" >X</button> -->
                                            <button id="mybtn1" type="button" class="getData closepropur m-4 p-2 " data-dismiss="modal" aria-hidden="true" ><img src="/images/close_window_48.png" ></button>

                                            <!-- <h3  id="myModalLabel">Modal header</h3> -->
                                          </div>
                                          <div style="height:90%; width: 80%;border: 0;" class="modal-body mx-auto">
                                          </div>
                                        </div>
    
                                        
                                        <!-- 7 minutes ago -->
                                        <input class="commentCurrentTime" type="hidden" value="<%=postsArray[j].postComments[i].commentCreatedAt %>" >
                                        <h5 class="time commentCurrentTimeh"></h5>
    
                                        <div class="getDataDiv">
                                            <!-- edit btn -->
                                        
                                            <% if(postsArray[j].postComments[i].isCommentOwner){ %> 
                                            <button value="/commentScore/<%= postsArray[j].postComments[i].commentId %>--<%=postsArray[j].postId%>" class="getData editbtn" ><img src="/images/edit2_32.png" alt="up"></button>
                                            <% }else{ %> 
                                            <!-- up btn -->
                                            <% let addedClassNameActive; if(postsArray[j].postComments[i].isUped){addedClassNameActive=" activeCommentUp"}else{addedClassNameActive=" "} %> 
                
                                          <button value="/commentScore/<%= postsArray[j].postComments[i].commentId %>--<%=postsArray[j].postId%>" class="getData upbtn <%= addedClassNameActive %>  " ><img src="/images/up_32.png" alt="up"></button>
                                            <% } %> 
                                         </div>
                                         <p class="commentMessagep" ><strong style="display:inline;" class="commentScoreStrong">[<%= postsArray[j].postComments[i].commentScore%>]</strong> <%=postsArray[j].postComments[i].commentMessage %></p>
    
                                    </div>
                                </div>
    
                            </li>
                            <% } %> 
                           
                        </ul>

                        <% if(!isAuth){ %> 
                          <!--login Button -->
                          <span style="font-size: 1.2em;" class="d-block mt-2">
                            <a class="loginA" href="/login?nextRedirect=/post/<%=postsArray[j].postId%>">Login</a> Too see Comments
                          </span>
                          <% } %> 


                    </div>
                </div>
            </div>
        </di>
    </div>
    <% } %> 

    <% } %> 

    <% let pageNumbers=Number(Math.ceil(postCount/5)); %> 

<% let nhref; if(isSearch){ %> 

  <div class="paginationDiv mx-auto mt-2">
    <nav aria-label="Page navigation ">
      <ul class="pagination ">
        <li class="page-item">
          <a class="page-link"  href="/search?pageNo=<%= pageNo-1 %>&searchParams=<%=searchParams  %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>


        <% for (let l = 1; l <= pageNumbers; l++) {%>
            <!--update here to check if this a home page or profile page and if profile user /profile/profileusername?pageno=3-->
            <li class="page-item"><a class="page-link" href="/search?pageNo=<%= l %>&searchParams=<%=searchParams  %>"><%= l %> </a></li>
            
        <%} %> 

        <li class="page-item">
          <a class="page-link" href="/search?pageNo=<%= Number(pageNo)+1 %>&searchParams=<%=searchParams  %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>
    </nav>

    </div>

    <%  }else { %>
      <% if(isProfile){nhref=`profile/${profileusername}`;} %> 
    <div class="paginationDiv mx-auto mt-2">
        <nav aria-label="Page navigation ">
          <ul class="pagination ">
            <li class="page-item">
              <a class="page-link"  href="/<%=nhref %>?pageNo=<%= pageNo-1 %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>


            <% for (let l = 1; l <= pageNumbers; l++) {%>
                <!--update here to check if this a home page or profile page and if profile user /profile/profileusername?pageno=3-->
                <li class="page-item"><a class="page-link" href="/<%=nhref %>?pageNo=<%= l %>"><%= l %> </a></li>
                
            <%} %> 

            <li class="page-item">
              <a class="page-link" href="/<%=nhref %>?pageNo=<%= Number(pageNo)+1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>

        
        </div>
        <% } %> 
    

    <!--for j qury-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    
    <!-- for post behavor -->
    <script src="/js/PostMainjs.js"></script>
    
    <!-- end of popur window -->
    <% }else{ %> 
    
        <h1 style="text-align: center;" class="mt-5">Posts Not Found</h1>
    
        <% } %> 